<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="httpPlatformHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified" />
    </handlers>
    <!-- Standalone mode'un oluşturduğu server.js dosyasını kullanıyoruz -->
    <httpPlatform processPath="node" arguments=".\server.js" startupTimeLimit="120" stdoutLogEnabled="true" stdoutLogFile=".\logs\node.log">
      <environmentVariables>
        <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%" />
        <environmentVariable name="NODE_ENV" value="production" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>